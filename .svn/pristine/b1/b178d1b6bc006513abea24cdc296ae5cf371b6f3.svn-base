$bar-width: 32px;
$bar-height: 3px;
$bar-spacing: 12px;
$header-height: 67px;

.hamburger-menu {
	position: absolute;
  top: 20px;
  left: 20px;
  margin: auto;
  width: $bar-width;
	height: $bar-height + $bar-spacing*2;
	cursor: pointer;
  z-index: 100;
	@media ($desktop){
		display: none;
	}
}

.bar,
.bar:after,
.bar:before {
  width: $bar-width;
	height: $bar-height;
}

.bar {
	position: relative;
	transform: translateY($bar-spacing);
	background: $color-brand-secondary;
	transition: all 0ms 100ms;

	&.animate{
		background: transparent;
	}
}

.bar:before {
	content: "";
	position: absolute;
	left: 0;
	bottom: $bar-spacing;
	background: $color-brand-secondary;
	transition: bottom 100ms 100ms cubic-bezier(0.23, 1, 0.32, 1), transform 100ms cubic-bezier(0.23, 1, 0.32, 1);
}

.bar:after {
	content: "";
	position: absolute;
	left: 0;
	top: $bar-spacing;
	background: $color-brand-secondary;
	transition: top 100ms 100ms cubic-bezier(0.23, 1, 0.32, 1), transform 100ms cubic-bezier(0.23, 1, 0.32, 1);
}

.bar.animate:after {
	top: 0;
	transform: rotate(40deg);
	transition: top 100ms cubic-bezier(0.23, 1, 0.32, 1), transform 100ms 100ms cubic-bezier(0.23, 1, 0.32, 1);;
	background: $color-brand-secondary;
}

.bar.animate:before {
	bottom: 0;
	transform: rotate(-40deg);
	transition: bottom 100ms cubic-bezier(0.23, 1, 0.32, 1), transform 100ms 100ms cubic-bezier(0.23, 1, 0.32, 1);;
	background: $color-brand-secondary;
}


.header{
	position: fixed;
  transition: height 300ms cubic-bezier(0.6, 0.04, 0.98, 0.335);
  height: $header-height;
  width: 100%;
  top: 0;
  left: 0;
  background-color: $color-brand-primary;
  color: white;
  background-image: url(../img/logo-sm.svg);
  background-repeat: no-repeat;
  background-position: center;
  background-size: auto ($header-height / 2);
  z-index: 95;
  &:after{
    opacity: 0;
    transition: 100ms;
  }
  &.active{
    &:after{
      opacity: 1;
      transition: 100ms;
      content: " ";
      position: absolute;
      bottom: 0;
			left: 0;
      background-color: $color-brand-secondary;
      height: 2px;
      width: 100%;
    }
  }

	@media ($desktop){
		position: relative;
		width: 100%;
    background-position: center left 20px;
	}
}

.nav{
  z-index: 90;
  position: fixed;
  padding-top: $header-height + 15px;
  padding-bottom: 60px; // Bottom padding on ios browser.
  width: 100%;
  background-color: $color-brand-primary;
  color: white;
  height: 100%;
  height: 100vh;
  transform: translateY(-100%);
  transition: 200ms ease-out;
  border-top: 2px solid $color-brand-secondary;
  overflow: auto;
  -webkit-overflow-scrolling: touch;
  &.active{
    transform: translateY(0);
  }

	@media ($desktop){
		position: relative;
		height: 100%;
		transform: translateY(0);
		padding-top: 0;
    border-top: 1px solid $color-brand-secondary;
	}
}

.nav-items{
	margin: 0;
	padding: 0;
	list-style: none;
}

.nav-item{

	font-size: 15px;
	min-height: 26px;
	text-transform: uppercase;
	line-height: 1;
	margin: 6px 0;

	a{
		background-repeat: no-repeat;
		background-position: center left 20px;
		background-size: 26px 26px;
		padding: 18px 20px 12px 60px;
		display: block;
		vertical-align: middle;
		color: white;
		text-decoration: none;
	}

	&--active a{
		background-color: #232e3a;
		border-left: 3px solid $color-brand-secondary;
	}

	&:hover a{
		background-color: #232e3a;
	}

	&--profile{
		text-transform: none;
		padding-top: 5px;
		background-repeat: no-repeat;
		background-position: center left 20px;
		background-size: 26px 26px;
		padding: 8px 20px 0 60px;
		@media ($desktop){
			display: none;
		}
	}
	&__username{
		font-size: 18px;
		line-height: 1;
	}
	&__role{
		line-height: 1;
		font-size: 13px;
	}
}

.nav-separator{
	height: 1px;
	background-color: #5e656d;
	margin: 20px;
	@media ($desktop){
		background-color: transparent;
	}
}
