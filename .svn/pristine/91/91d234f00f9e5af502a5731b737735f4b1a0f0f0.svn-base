.gradient-background{
  @extend %gradient;
  position: absolute;
  width: 100%;
  height: 100%;
  z-index: 0;
}

.login-container{
  z-index: 5;
  position: relative;
  margin: 0 auto;
  max-width: 325px;
  padding-top: 60px;
}

.form-login{
  background-color: white;
  padding: 32px;
  box-shadow: 0 0 90px rgba(51, 51, 51, 0.60);
  margin-bottom: 24px;

  .form-control{
    background-color: #f5f5f5;
    border: 0;

    &::-webkit-input-placeholder{
      color: #2f3b49;
    }
  }

  .help-block{
    margin-bottom: 30px;

    a{
      color: #d94244;
      font-size: 12px;
    }
  }

  .help-block-register{
    margin-bottom: 0;
  }
}

.login{
  &__logo{
    display: block;
    margin: 0 auto;
    margin-bottom: 35px;
  }

  &__submit{
    display: block;
    width: 100%;
    font-size: 16px;
    text-transform: uppercase;
    margin-bottom: 20px;
  }

  &__register{
    text-align: center;
    display: block;
  }

  &__copy{
    text-align: center;
    color: white;
    font-size: 12px;
    opacity: .6;
    a{
      color: white;
      text-decoration: none;
    }
  }
}

.has-error .form-control {
  border: 1px solid #d84244;
}
