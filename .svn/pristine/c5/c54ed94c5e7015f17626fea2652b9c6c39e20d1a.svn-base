    <main class="main">
      <div class="main-top">
        <div class="row">
        <div class="col-sm-4">
          <select class="dcm-select" name="select-clinic">
          <option value="Clínica Red Dentist">Clínica Red Dentist</option>
          <option value="">Another Clinic</option>
          <option value="">Another Clinic</option>
          <option value="">Another Clinic</option>
          <option value="">Another Clinic</option>
